@model WebApplication1.ViewModels.UserViewModel
@{
    ViewBag.Title = "Users";
}

@section scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <h1>Users</h1>
        <form method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <div>
                @ViewBag.UserMessage
            </div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-muted"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" typeof="email" class="form-control" />
                <span asp-validation-for="Email" class="text-muted"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" cols="40" rows="4" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-muted"></span>
            </div>

            <div class="form-group">
                <a asp-controller="App" asp-action="Index" class="btn btn-info">Cancel</a>
                <input type="submit" value="Send message" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>